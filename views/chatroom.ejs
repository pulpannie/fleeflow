<!doctype html>
<html>
  <head>
    <title>Chatroom</title>
    <style>
      .chat-content {

      }

      html, body { font: 13px Helvetica, Arial; height: 100%;}
      form { background: #000; padding: 3px; position: absolute; bottom: 0px; width: 100%;}
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      .chat-metadata{
   
      }
      .users{
        padding-left: 10px;
      }
      #message {
      }
      #message_user {
        color: blue;
      }
      .message{
      	font-size: 17px;
      	padding-top: 1%;
        padding-left: 3%;
      	position: relative;
      }
      .message_nickname {
        position: absolute;
        font-weight: bold;
        display: inline-block;
        overflow: auto;
      }

      .message_content {
        display: inline;
        color: grey;
        position: relative;
        left: 10%;
      }
      #king {
        color: blue;
      }

      #messages{
        overflow-y: auto;
        padding-bottom: 5px;

      }

      #image{
        background-color: grey;
      }
      #msg_img{
        width: 40%; 
         
      }
      .container-fluid{
      }

      .flex-fill{
      	flex:1;
      }
    </style>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<%var chatroomid_forscript = chatroom.id %>
<% var user_nickname = user%>
<script>
  var chatroom_id = "<%=chatroomid_forscript%>";
  var chatroom_nickname = "<%=user_nickname%>";
  $(function () {
    //socket.io 서버에 접속하기 위한 메소드
    var objDiv = document.getElementById("messages");
    objDiv.scrollTop = objDiv.scrollHeight;
    var socket = io();
    $('#fileUploadForm').submit(function(e){
      e.preventDefault(); // prevents page reloading
      
      var form = $('#fileUploadForm')[0];
      var data = new FormData(form);
      $("#btnSubmit").prop("disabled", true);
      //서버로 메세지 송신
      socket.emit('chat message', data);
      $.ajax({
        type: "POST",
        url: "/chatroom/" + chatroom_id,
        enctype: 'multipart/form-data',
        dataType: "application/x-www-form-urlencoded",
        processData: false,
        contentType: false,
        cache: false,

        data: data
      });
      $('#m').val('');
      $('#image').val('');
      $("#btnSubmit").prop("disabled", false);
    });

    //접속되어있는 서버로부터 메세지 수신
    socket.on('chat message', function(msg){
      var isUser = "message_user";
      if (msg.nickname != chatroom_nickname){
        isUser = "message";
      }
      if (msg.typeOf == 'msg'){
      $('#messages').append("<div id="+isUser+" class='message'><div class='message_nickname'>" + msg.nickname + ":"+"</div>" + "<div class='message_content'>" + msg.message + "</div></div>");
      } else {
        $('#messages').append("<div id="+ isUser + " class='message'><div class='message_nickname'>" + msg.nickname + ": " + "</div>" + "<img class='message_content' id='msg_img' width='100px' height:'' src="+ msg.message +"></div>");
      }
     $("#messages").animate({ scrollTop: $("#messages")(0).scrollHeight}, 2000);
     objDiv.scrollTop = objDiv.scrollHeight;
    });
      objDiv.scrollTop = objDiv.scrollHeight;
  });


</script>
  </head>
  <body> 
    <div class="chat-content container-fluid d-flex h-100 flex-column">
    <div class="row flex-fill">
    <div class="col-9 " style="padding-left:0px">
    <div id="messages">
      <% chatroom.messages.forEach(function(messages){%>
      <% if (messages.nickname == user_nickname){ %>
      <div id="message_user" class="message">
      	<% if (messages.typeOf == "img") {%>
      		<div class="message_nickname"><%=messages.nickname%>:</div> <img class="message_content" id='msg_img' src="<%= messages.message%>">
     		 </div>
     	<% }else{%>
       		 <div class="message_nickname"><%=messages.nickname%>:</div> <div class="message_content"><%= messages.message %></div>
      		</div>
      	<%}%>
      <%} else {%>
      <% if (messages.typeOf == "img") {%>
      <div id="message" class="message">
      		<div class="message_nickname"><%=messages.nickname%>:</div> <img class="message_content" id='msg_img' src="<%= messages.message%>">
      	</div>
      	<%}else{%>
      <div id="message" class="message">
        <div class="message_nickname"><%=messages.nickname%>:</div> <div class="message_content"><%= messages.message %></div>
      </div>
      <%};%>
      <%};%>
      <%});%>
  </div>
    <form id="fileUploadForm" enctype="multipart/form-data"> 
      <input id="image" type="file" name="img_file" accept=".jpg, .jpeg, .png">
      <input id="m" type="text" name="message">
      <button id="btnSubmit">Send</button>
    </form>
  </div>
  <div class="chat-metadata col-3">
    <div class="users">
      <h1>Users</h1>
      <div>Online</div>
      <% roomData.forEach(function(nickname){%>
        <% if (nickname.user_id == nickname.king_user_id){ %>
          <div id='king'><%= nickname.nickname%></div>
        <% } else {%>
          <div><%=nickname.nickname%></div>
        <%}%>
      <%});%>
    </div>
	</div>
</div>
  </div>
  </body>
</html>