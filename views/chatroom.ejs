<!doctype html>
<html>
  <head>
    <title>Chatroom</title>
    <style>
      .chat-content {
        width: 80%;
      }
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 80%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      .chat-metadata{
        width: 20%;
        right: 0;
        top: 30px;
        position: fixed;
      }
      .users{
        padding-left: 30px;
      }
    /*  #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages { padding: 5px 10px; }
      #messages div:nth-child(odd) { background: #eee; }*/
      .message {
        font-size: 17px;
        padding-top: 5px;
        padding-left: 15px;
      }
      .message_user {
        font-size: 17px;
        padding-top: 5px;
        padding-left: 15px;
        color: blue;
      }
      .message_nickname {
        display: inline; 
        font-weight: bold;
        
      }

      .message_content {
        padding-left: 5px;
        padding-top: 10px;
        display: inline;
        color: grey;
      }
      .message_content_user {
        padding-left: 5px;
        padding-top: 10px;
        display: inline;
        color: #4a4a4a;
      }
      #king {
        color: blue;
      }

      #messages{
        height: 46em;
        width: 64em;
        overflow-y: auto;
        padding-bottom: 5px;
      }

      #image{
        background-color: grey;
      }
    </style>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<%var chatroomid_forscript = chatroom.id %>
<% var user_nickname = user%>
<script>
  var chatroom_id = "<%=chatroomid_forscript%>";
  var chatroom_nickname = "<%=user_nickname%>";
  $(function () {
    //socket.io 서버에 접속하기 위한 메소드
    var socket = io();
    scrollToBottom();
    $('#fileUploadForm').submit(function(e){
      e.preventDefault(); // prevents page reloading
      
      var form = $('#fileUploadForm')[0];
      var data = new FormData(form);
      $("#btnSubmit").prop("disabled", true);
      //서버로 메세지 송신
      socket.emit('chat message', data);
      $.ajax({
        type: "POST",
        url: "/chatroom/" + chatroom_id,
        enctype: 'multipart/form-data',
        dataType: "application/x-www-form-urlencoded",
        processData: false,
        contentType: false,
        cache: false,

        data: data,
        success: function (data) {
                $("#btnSubmit").prop("disabled", false);
                $('#m').val('');
                $('#image').val('');
                alert("complete");
              },
        error: function (error) {
                console.log("ERROR : ", error);
                $("#btnSubmit").prop("disabled", false);
                $('#m').val('');
                $('#image').val('');
                alert("false");
              }
      });
    });
    //접속되어있는 서버로부터 메세지 수신
    socket.on('chat message', function(msg){
      if (msg.nickname == chatroom_nickname){
      $('#messages').append("<div class='message_user'><div class='message_nickname'>" + msg.nickname + "</div>" + ": " + "<div class='message_content_user'>" + msg.message + "</div></div>");
      } else {
      $('#messages').append("<div class='message'><div class='message_nickname'>" + msg.nickname + "</div>" + ": " + "<div class='message_content'>" + msg.message + "</div></div>");
      }
      scrollToBottom();
    });
  });
  function scrollToBottom(){
    messages.scrollTop = messages.scrollHeight;
  }

</script>
  </head>
  <body>
    <div class="chat-content">
    <div id="messages">
      <% chatroom.messages.forEach(function(messages){%>
      <% if (messages.nickname == user_nickname){ %>
      <div class="message_user">
        <div class="message_nickname"><%=messages.nickname%></div>: <div class="message_content_user"><%= messages.message %></div>
      </div>
      <%} else {%>
      <div class="message">
        <div class="message_nickname"><%=messages.nickname%></div>: <div class="message_content"><%= messages.message %></div>
      </div>
      <%};%>
      <%});%>
    </div>
    <form id="fileUploadForm" enctype="multipart/form-data"> 
      <input id="image" type="file" name="img_file" accept=".jpg, .jpeg, .png">
      <input id="m" type="text" name="message">
      <button id="btnSubmit">Send</button>
    </form>
  </div>
  <div class="chat-metadata">
    <div class="users">
      <h1>Users</h1>
      <div>Online</div>
      <% roomData.forEach(function(nickname){%>
        <% if (nickname.user_id == nickname.king_user_id){ %>
          <div id='king'><%= nickname.nickname%></div>
        <% } else {%>
          <div><%=nickname.nickname%></div>
        <%}%>
      <%});%>
    </div>
  </div>
  </body>
</html>